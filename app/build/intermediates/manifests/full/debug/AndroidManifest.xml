<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hostaparty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.hostaparty.HostOrJoin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hostaparty.HostEvent"
            android:label="@string/title_activity_host_event" >
        </activity>
        <activity
            android:name="com.example.hostaparty.AddQuiz"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.AddQuiz" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hostaparty.inputQuest"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.inputQuest" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.hostaparty.JoinEvent"
            android:label="@string/title_activity_join_event" >
        </activity>
        <activity
            android:name="com.example.hostaparty.ChooseGame"
            android:label="@string/title_activity_choose_game" >
        </activity>
    </application>

</manifest>